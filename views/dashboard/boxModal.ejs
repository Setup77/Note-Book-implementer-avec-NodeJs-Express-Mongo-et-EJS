<script>
    var itemId = "";
    var itemName = ";"

    document.addEventListener('DOMContentLoaded', function () {
      var myModal = document.getElementById('myModal');
      var myModalModify = document.getElementById('myModalModify');
      myModal.addEventListener('show.bs.modal', function (event) {
        // Button that triggered the modal
        var button = event.relatedTarget;
        itemId = button.getAttribute('data-item-id');
        itemName = button.getAttribute('data-item-name');

        var modalItemTitle = myModal.querySelector('#Item-title');
        modalItemTitle.innerHTML = itemName;

        var FormDelete = myModal.querySelector('#FormDelete');
        const attributeAction = 'action';
        const actionValue = '/dashboard/item-delete-' + itemId + '?_method=DELETE';
        FormDelete.setAttribute(attributeAction, actionValue);

        console.log(itemId, itemName, actionValue);
      });

      myModalModify.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;

        itemId = button.getAttribute('data-item-id');
        itemName = button.getAttribute('data-item-name');
        itemDescription = button.getAttribute('data-item-description');

        var modalItemTitle = myModalModify.querySelector('#Modify-title');
        modalItemTitle.innerHTML = itemName;

        var FormModify = myModalModify.querySelector('#FormModify');
        const attributeAction = 'action';
        const actionValue = '/dashboard/item-'+itemId+'?_method=PUT';
        FormModify.setAttribute(attributeAction, actionValue);

        // Update the modal's content.
        var modalItemTextarea = myModalModify.querySelector('#body');
var modalItemTitleInput = myModalModify.querySelector('#title');

        modalItemTextarea.value = itemDescription;
        modalItemTitleInput.value = itemName;
        console.log(itemId,itemDescription, itemName, actionValue);
      });
    });
  </script>



  <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Voulez-vous supprimer cette note?</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="text-danger">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>
            <span id="Item-title"></span>
          </p>
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>

          <form id="FormDelete" method="POST" class="position-relative">
            <button type="submit" class="btn btn-danger">Supprimer</button>
          </form>

        </div>
      </div>
    </div>
  </div>



  <div class="modal fade" tabindex="-1" role="dialog" id="myModalModify">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modifi√© "<span id="Modify-title" class="text-primary"></span>"</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="text-primary">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form id="FormModify" method="POST" class="position-relative">
          <div class="form-group mb-4 position-absolute" style="left:1px; top:1px; right: 1px;">
            <input type="text" class="form-control fw-bold border-2 fs-4" id="title" name="title" value=""
              placeholder="Title">
          </div>
          <br /><br />
          <div class="form-group mb-4">
            <textarea class="form-control pt-5 fs-4" id="body" name="body" placeholder="Prenez note..."
              rows="5"></textarea>
          </div>
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>

          
            <button type="submit" class="btn btn-primary">Modifier</button>
          </form>

        </div>
      </div>
    </div>
  </div>



  <div class="modal fade" tabindex="-1" role="dialog" id="myModalAdd">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Ajouter une Note </h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="text-primary">&times;</span>
          </button>
        </div>
        <div class="modal-body">
           <form action="/dashboard/add" method="POST" class="position-relative">

          <div class="form-group mb-4 position-absolute" style="left:1px; top:1px; right: 1px;">
            <input type="text" class="form-control fw-bold border-2 fs-4" id="title" name="title" value=""
              placeholder="Titre de la note...">
          </div>
          <br /><br />
          <div class="form-group mb-4">
            <textarea class="form-control pt-5 fs-4" id="body" name="body" placeholder="Prenez note..."
              rows="5"></textarea>
          </div>
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            <button type="submit" class="btn btn-primary">+ Ajouter Note</button>
          </form>

        </div>
      </div>
    </div>
  </div>